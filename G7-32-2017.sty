% Пакет для настройти enumerate и itemize
\RequirePackage{enumitem}
% Стили для нумерованного списка
\setlist[enumerate]{
  label=\arabic*),
  align=left,
  labelindent=\parindent,
  itemindent=*,
  leftmargin=0pt,
  topsep=0pt,
  parsep=0pt,
  partopsep=0pt,
  itemsep=0pt,
}

% Стили для ненумерованного списка
\setlist[itemize]{
  label=-,
  labelindent=\parindent,
  itemindent=*,
  leftmargin=0pt,
  topsep=0pt,
  parsep=0pt,
  partopsep=0pt,
  itemsep=0pt,
}
