\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{G7-32-2017}[2023/01/26 Style Package for GOST NIR Report]


% Поля страниц
\RequirePackage[left=30mm,right=15mm,top=20mm,bottom=20mm,headsep=0pt]{geometry}


% Отступы первых строк абзаца
\RequirePackage{indentfirst}
\newcommand{\@indentValue}{1.25cm}
\setlength\parindent{\@indentValue}
% Интервал между строк
\renewcommand{\baselinestretch}{1.5}


% Внешний вид заголовков
\RequirePackage{titlesec}

\titlespacing{\chapter}{\@indentValue}{*0}{*3}
\titlespacing{\section}{\@indentValue}{*0}{*3}
\titlespacing{\subsection}{\@indentValue}{*0}{*3}

\newcommand{\frontmatter}{
  \setcounter{secnumdepth}{-1}
  \titleformat{\chapter}[hang]{\bfseries\Large}{\thechapter}{0pt}{
    \centering
  }[]
}
\newcommand\mainmatter{
  \setcounter{secnumdepth}{4}
  \titleformat{\chapter}[hang]{\bfseries\Large}{\thechapter}{1em}{}[]
}
\newcommand\backmatter{
  \setcounter{secnumdepth}{1}
  \titleformat{\chapter}[display]{\bfseries\Large}{\centering{\appendixname~\thechapter}}{0pt}{
    \centering
  }[]
}
